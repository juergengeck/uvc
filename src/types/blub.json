{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["../src/*"],
      "@components/*": ["../src/components/*"],
      "@models/*": ["../src/models/*"],
      "@screens/*": ["../src/screens/*"],
      "@utils/*": ["../src/utils/*"],
      "@hooks/*": ["../src/hooks/*"],
      "@services/*": ["../src/services/*"],
      "@assets/*": ["../src/assets/*"]
    }
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../node_modules/@refinio/one.core/@OneCoreTypes.d.ts",
    "./@OneCoreTypes.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
} 